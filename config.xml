<?xml version='1.0' encoding='utf-8'?>
<widget id="org.projectaon.kaichronicles" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Kai Chronicles</name>
    <description>
        Game player for books 1 and 2 of Lone Wolf gamebooks.
    </description>
    <author email="toni.bennasar@projectaon.org" href="https://www.projectaon.org">
        Project AON
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon density="xxxhdpi" height="192" platform="android" src="res/android/xxxhdpi.png" width="192" />

    <platform name="android">

        <!-- Min version is 4.4.2 (API 19), the first one that uses 
             Chromium (Chrome v32), the previous fails to render Bootstrap -->
        <preference name="android-minSdkVersion" value="19" />

        <allow-intent href="market:*" />

        <!-- Icons -->
        <icon src="res/android/xxhdpi.png" />
        <icon density="ldpi" src="res/android/icons/ldpi.png" />
        <icon density="mdpi" src="res/android/icons/mdpi.png" />
        <icon density="hdpi" src="res/android/icons/hdpi.png" />
        <icon density="xhdpi" src="res/android/icons/xhdpi.png" />
        <icon density="xxhdpi" src="res/android/icons/xxhdpi.png" />
        <icon density="xxxhdpi" src="res/android/icons/xxxhdpi.png" />

        <!-- Splashes -->
        <splash src="res/android/splashes/drawable-land-hdpi.png" density="land-hdpi"/>
        <splash src="res/android/splashes/drawable-land-ldpi.png" density="land-ldpi"/>
        <splash src="res/android/splashes/drawable-land-mdpi.png" density="land-mdpi"/>
        <splash src="res/android/splashes/drawable-land-xhdpi.png" density="land-xhdpi"/>
        <splash src="res/android/splashes/drawable-port-hdpi.png" density="port-hdpi"/>
        <splash src="res/android/splashes/drawable-port-ldpi.png" density="port-ldpi"/>
        <splash src="res/android/splashes/drawable-port-mdpi.png" density="port-mdpi"/>
        <splash src="res/android/splashes/drawable-port-xhdpi.png" density="port-xhdpi"/>
        
    </platform>

    <engine name="android" spec="~6.1.0" />

</widget>
