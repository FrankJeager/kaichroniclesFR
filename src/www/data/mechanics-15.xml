            <test hasDiscipline="hntmstry|pthmnshp">
                <choiceState section="sect214" set="enabled" />
                <choiceState section="sect229" set="disabled" />
            </test>
        </section>

        <section id="sect18">
            <choiceState section="sect256" set="disabled" />
            <test hasDiscipline="pthmnshp">
