<mechanics book="1">

    <!-- LIST OF TRANSLATED IMAGES -->
    <translated-images>
        <image>map.png</image>
        <image>small21.png</image>
        <image>small31.png</image>
        <image>weapons.png</image>
    </translated-images>

    <!-- GAME RULES -->
    <sections>

        <section id="gamerulz">
            <!-- Select the player skills (weapons skill and endurance) UI -->
            <setSkills />
        </section>

        <section id="discplnz">
            <!-- Select the Kai disciplines UI -->
            <setDisciplines />
        </section>

        <section id="equipmnt">
            <!-- Choose equipment -->
            <pick objectId="axe" />
            <pick class="meal" count="1" />
            <pick objectId="map" />

            <randomTable index="0">
                <pick class="money" count="[RANDOM]" />
            </randomTable>

            <randomTable index="1">
                <case value="1">
                    <pick objectId="sword" />
                </case>
                <case value="2">
                    <pick objectId="helmet" />
                </case>
                <case value="3">
                    <pick class="meal" count="2" />
                </case>
                <case value="4">
                    <pick objectId="chainmail" />
                </case>
                <case value="5">
                    <pick objectId="mace" />
                </case>
                <case value="6">
                    <pick objectId="healingpotion" />
                </case>
                <case value="7">
                    <pick objectId="quarterstaff" />
                </case>
                <case value="8">
                    <pick objectId="spear" />
                </case>
                <case value="9">
                    <pick class="money" count="12" />
                </case>
                <case value="0">
                    <pick objectId="broadsword" />
                </case>
            </randomTable>

            <!-- Choose equipment UI -->
            <chooseEquipment 
                en-text="Click on both Random Table links before continue" 
                es-text="Haz click en ambos links de la Tabla de la Suerte antes de continuar"
            />
            
        </section>
        
    </sections>

</mechanics>
